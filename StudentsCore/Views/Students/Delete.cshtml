@model StudentsCore.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h3 style="color:seagreen" class="my-3">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color:seagreen">Student Information</h4>
    <hr />    <hr />
    <dl class="dl-horizontal">
        <dt class="text-muted">
            student's Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="text-primary">
            student's Age
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt class="text-info">
            student's Birth Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateBirth)
        </dd>

        <dt class="text-warning">
            student's Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

        <dt class="text-danger">
            student's Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="text-success">
            student's Image
        </dt>

        <dd>
            <img src="~/Uploads/@(Model.Image)" class="img-thumbnail " style="height :70px; width:100px" />
        </dd>

    </dl>

    <form asp-action="Delete">
        <button type="submit" value="Delete" class="btn btn-danger mx-2">
            <i class="icofont-ui-delete"></i>
            Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-success">
            <i class="icofont-ui-close"></i>
            Cancel
        </a>
    </form>
</div>
